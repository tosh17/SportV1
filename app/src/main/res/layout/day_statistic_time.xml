<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="15dp"
        android:elevation="5dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">



            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                style="@style/DayStatatText"
                android:textColor="@color/colorPBlue"
                android:textSize="20sp"
                android:text="@string/day_statistic_lable_0" />

            <TextView
                 android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/DayStatatText"
                android:text="@string/day_statistic_lable_1" />
            <TextView
                android:id="@+id/textComonTime1"
                style="@style/DayStatatText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="20dp"
                android:textColor="@color/colorPBlue"
                 />
            <TextView
                style="@style/DayStatatText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/day_statistic_lable_2" />
            <TextView
                android:id="@+id/textComonTime2"
                style="@style/DayStatatText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="20dp"
                android:textColor="@color/colorPGreen"
                />
            <TextView
                style="@style/DayStatatText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/day_statistic_lable_3" />
            <TextView
                android:id="@+id/textComonTime3"
                style="@style/DayStatatText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="20dp"
                android:textColor="@color/colorPYellow"
                />
            <TextView
                style="@style/DayStatatText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/day_statistic_lable_4" />
            <TextView
                android:id="@+id/textComonTime4"
                style="@style/DayStatatText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="20dp"
                android:textColor="@color/colorPRed"
                />

            <com.github.mikephil.charting.charts.PieChart
                android:id="@+id/chartHalfPie1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                        />
        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:elevation="5dp"
        android:background="@color/TOrange100">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                style="@style/DayStatatText"
                android:textColor="@color/colorPBlue"
                android:textSize="20sp"
                android:text="@string/day_statistic_lable_exes_0" />

            <TextView
                style="@style/DayStatatText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/day_statistic_lable_exes_1" />

            <TextView
                style="@style/DayStatatText"
                android:id="@+id/textExes1"
                android:layout_gravity="right"
                android:layout_marginRight="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 />
            <TextView
                style="@style/DayStatatText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/day_statistic_lable_exes_2" />

            <TextView
                style="@style/DayStatatText"
                android:id="@+id/textExes2"
                android:layout_gravity="right"
                android:layout_marginRight="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <TextView
                style="@style/DayStatatText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/day_statistic_lable_exes_3" />

            <TextView
                style="@style/DayStatatText"
                android:id="@+id/textExes3"
                android:layout_gravity="right"
                android:layout_marginRight="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <com.github.mikephil.charting.charts.PieChart
                android:id="@+id/chartHalfPie2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                              />
        </LinearLayout>

    </android.support.v7.widget.CardView>

    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="  " />

</LinearLayout>
</ScrollView>