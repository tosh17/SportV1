<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
        >


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/mainContent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingBottom="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="16dp"

        android:baselineAligned="false"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <TextView
            android:id="@+id/textViewTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:background="@drawable/rectangle_rounded_some_title"
            android:elevation="4dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            tools:text="Подтягиваниу широким хватом за голову"
            android:textAlignment="center"
            android:layout_gravity="center_vertical|left"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_weight="1"/>


        <TextView
            android:id="@+id/crime_title_lable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Подходы"
            android:layout_weight="1"
            android:layout_gravity="center_vertical|center_horizontal"
            style="?android:listSeparatorTextViewStyle"
            />

        <ScrollView
            android:id="@+id/ScrolExes"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="30">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/podhod_case0"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/rectangle_rounded_some_red"
                    android:elevation="4dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textViewPodhod0"
                        style="@style/TextViewP"
                        android:layout_width="wrap_content"
                        android:layout_gravity="center_vertical|left"
                        android:layout_marginLeft="13dp"
                        android:layout_marginRight="13dp"
                        android:layout_weight="20"
                        android:text="Разминка" />

                    <android.support.v7.widget.SwitchCompat
                        android:id="@+id/switch0"
                        style="@style/TextViewP"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|right"
                        android:layout_weight="80"
                        android:checked="true"
                        android:text="" />

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/podhod_case1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/rectangle_rounded_some_red"
                    android:elevation="4dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textViewPodhod1"
                        style="@style/TextViewP"
                        android:layout_width="wrap_content"
                        android:layout_gravity="center_vertical|left"
                        android:layout_marginLeft="13dp"
                        android:layout_marginRight="13dp"
                        android:layout_weight="20"
                        android:text="Разминка" />

                    <android.support.v7.widget.SwitchCompat
                        android:id="@+id/switch1"
                        style="@style/TextViewP"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|right"
                        android:layout_weight="80"
                        android:checked="true"
                        />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/podhod_case2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/rectangle_rounded_some_red"
                    android:elevation="4dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textViewPodhod2"
                        style="@style/TextViewP"
                        android:layout_width="wrap_content"
                        android:layout_gravity="center_vertical|left"
                        android:layout_marginLeft="13dp"
                        android:layout_marginRight="13dp"
                        android:layout_weight="20"
                        android:text="Разминка" />

                    <android.support.v7.widget.SwitchCompat
                        android:id="@+id/switch2"
                        style="@style/TextViewP"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|right"
                        android:layout_weight="80"
                        android:checked="true"
                        android:text="" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/podhod_case3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/rectangle_rounded_some_red"
                    android:elevation="4dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textViewPodhod3"
                        style="@style/TextViewP"
                        android:layout_width="wrap_content"
                        android:layout_gravity="center_vertical|left"
                        android:layout_marginLeft="13dp"
                        android:layout_marginRight="13dp"
                        android:layout_weight="20"
                        android:text="Разминка" />

                    <android.support.v7.widget.SwitchCompat
                        android:id="@+id/switch3"
                        style="@style/TextViewP"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|right"
                        android:layout_weight="80"
                        android:checked="true"
                        android:text="" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/podhod_case4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/rectangle_rounded_some_red"
                    android:elevation="4dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textViewPodhod4"
                        style="@style/TextViewP"
                        android:layout_width="wrap_content"
                        android:layout_gravity="center_vertical|left"
                        android:layout_marginLeft="13dp"
                        android:layout_marginRight="13dp"
                        android:layout_weight="20"
                        android:text="Разминка" />

                    <android.support.v7.widget.SwitchCompat
                        android:id="@+id/switch4"
                        style="@style/TextViewP"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|right"
                        android:layout_weight="80"
                        android:checked="true"
                        android:text="" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/podhod_case5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/rectangle_rounded_some_red"
                    android:elevation="4dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textViewPodhod5"
                        style="@style/TextViewP"
                        android:layout_width="wrap_content"
                        android:layout_gravity="center_vertical|left"
                        android:layout_marginLeft="13dp"
                        android:layout_marginRight="13dp"
                        android:layout_weight="20"
                        android:text="Разминка" />

                    <android.support.v7.widget.SwitchCompat
                        android:id="@+id/switch5"
                        style="@style/TextViewP"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|right"
                        android:layout_weight="80"
                        android:checked="true"
                        android:text="" />
                </LinearLayout>


            </LinearLayout>
        </ScrollView>


        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/imageFon"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:srcCompat="@color/TOrange100"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />
    <android.support.constraint.ConstraintLayout
        android:id="@+id/TimerLayot"
        android:layout_width="0dp"
        android:layout_height="0dp"
        xmlns:tools="http://schemas.android.com/tools"
        android:background="@android:color/transparent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent">


        <ImageView
            android:id="@+id/imageTimerOval"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:minHeight="300dp"
            android:minWidth="300dp"
            android:padding="45dp"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/timer"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />

        <TextView
            android:id="@+id/textViewTimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="50sp"
            android:textColor="@color/Orange600"
            android:textStyle="italic"
            android:gravity="center"
            tools:text="00:00"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent" />
    </android.support.constraint.ConstraintLayout>
    <LinearLayout
        android:id="@+id/textDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:visibility="gone"
        android:background="@drawable/rectangle_rounded_some_grey"
        android:orientation="vertical"

        android:elevation="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="60dp"
        android:layout_marginRight="40dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Кол-во" />

            <EditText
                android:id="@+id/editTexDialogCount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number" />
        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Вес     " />

                <EditText
                    android:id="@+id/editTextDialogWeight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="number" />

            </LinearLayout>


        </LinearLayout>

        <Button
            android:id="@+id/buttonDialogOk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Ok" />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
