<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="TextViewP">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:elevation">0dp</item>
        <item name="android:padding">1dp</item>
    </style>

    <style name="TextViewP2" parent="TextViewP">
        <item name="android:background">@color/colorPGreen</item>
    </style>

    <style name="style_cronometr">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">15dp</item>

        <item name="android:textSize">35sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:background">@color/colorPYellow</item>
        <item name="android:elevation">0dp</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ListExes">
        <item name="android:background">@color/TLigthGreen50</item>

    </style>

    <style name="exesSwitch">
        <!-- активное состояние (30% прозрачности для фона) -->
        <item name="colorControlActivated">@color/colorPGrey</item>

        <!-- неактивное состояние ползунка -->
        <item name="colorSwitchThumbNormal">@color/colorPBlue</item>

        <!-- цвет дорожки для неактивного состояния (30% прозрачности) -->
        <item name="android:colorForeground">@android:color/darker_gray</item>

    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="DayStatatText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:textSize">@dimen/list_progs_size</item>
        <item name="android:textColor">@color/colorPGrey</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="CustomAlertDialog" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@color/Grey800</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:gravity">bottom</item>
        <item name="android:textColor">#000000</item>
    </style>
    <style name="TransAlertDialog" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:width">300dip</item>
        <item name="android:textColor">#000000</item>
    </style>
</resources>
